<?xml version="1.0" encoding="utf-8"?>
<resources>


    <declare-styleable name="EnglishKeyboardView">
        <!--        整体的背景颜色-->
        <attr name="ek_background" format="color" />
        <!--        格子的边距-->
        <attr name="ek_rect_spacing" format="dimension" />
        <!--        格子的高度-->
        <attr name="ek_rect_height" format="dimension" />
        <!--        格子的距离上边-->
        <attr name="ek_rect_margin_top" format="dimension" />
        <!--        左右距离-->
        <attr name="ek_margin_left_right" format="dimension" />
        <!--        上边距离-->
        <attr name="ek_margin_top" format="dimension" />
        <!--        下边距离-->
        <attr name="ek_margin_bottom" format="dimension" />
        <!--        格子的背景-->
        <attr name="ek_rect_background" format="reference" />
        <!--        格子选择后的背景-->
        <attr name="ek_rect_select_background" format="reference" />

        <!--        格子的文字大小-->
        <attr name="ek_rect_text_size" format="dimension" />
        <!--        格子的文字颜色-->
        <attr name="ek_rect_text_color" format="color" />
        <!--        格子的文字选中颜色-->
        <attr name="ek_rect_select_text_color" format="color" />

        <!--是否显示完成按钮-->
        <attr name="ek_is_show_complete" format="boolean" />
        <!--完成按钮文字大小-->
        <attr name="ek_complete_text_size" format="dimension" />
        <!--完成按钮文字颜色-->
        <attr name="ek_complete_text_color" format="color" />
        <!--完成按钮文字内容-->
        <attr name="ek_complete_text" format="string" />
        <!--完成按钮距离上边-->
        <attr name="ek_complete_margin_top" format="dimension" />
        <!--完成按钮距离下边-->
        <attr name="ek_complete_margin_bottom" format="dimension" />
        <!--完成按钮距离右边-->
        <attr name="ek_complete_margin_right" format="dimension" />
        <!--其他行边距-->
        <attr name="ek_other_lines_margin" format="dimension" />
        <!--数字是否禁止-->
        <attr name="ek_is_num_prohibit" format="boolean" />
        <!--数字禁止颜色-->
        <attr name="ek_text_prohibit_color" format="color" />
        <!--是否触发点击效果-->
        <attr name="ek_text_click_effect" format="boolean" />

    </declare-styleable>

</resources>